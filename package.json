{
  "name": "web-launch-pad",
  "version": "1.0.0",
  "description": "A boilerplate for my future projects.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:start-server\"",
    "dev:client": "NODE_ENV=development ./node_modules/.bin/webpack-dev-server --no-info --content-base dist/web/ --inline --config webpack.config.client.js",
    "dev:server": "NODE_ENV=development ./node_modules/.bin/webpack --hide-modules --config webpack.config.server.js --watch",
    "dev:start-server": "NODE_ENV=development ./node_modules/.bin/nodemon ./dist/server.js --watch ./dist/server.js",
    "build:server": "NODE_ENV=production ./node_modules/.bin/webpack --config webpack.config.server.js",
    "build:client": "NODE_ENV=production ./node_modules/.bin/webpack --config webpack.config.client.js",
    "build": "npm run build:server && npm run build:client",
    "start": "NODE_ENV=production node ./dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-client": "^1.2.2",
    "apollo-passport": "0.0.7",
    "apollo-passport-local": "0.0.3",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.2",
    "graphql": "^0.9.6",
    "graphql-tag": "^2.1.0",
    "koa": "^2.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.7.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.2.0",
    "koa-static": "^3.0.0",
    "node-sass": "^4.5.3",
    "passport": "^0.3.2",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.1",
    "vue": "^2.3.3",
    "vue-apollo": "^2.1.0-beta.8",
    "vue-loader": "^12.1.0",
    "vue-router": "^2.5.3",
    "vue-template-compiler": "^2.3.3",
    "vuex": "^2.3.1",
    "vuex-router-sync": "^4.1.3",
    "webpack": "^2.6.0",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-html": "^2.0.3",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^2.0.1",
    "koa-webpack-hot-middleware": "^1.0.3",
    "nodemon": "^1.11.0",
    "webpack-node-externals": "^1.6.0"
  }
}
