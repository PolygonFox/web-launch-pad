{
  "name": "web-launch-pad",
  "version": "1.0.0",
  "description": "A boilerplate for my future projects.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others --raw --prefix \"[{name}]\" --names \"CLIENT BUILDER,SERVER BUILDER,SERVER\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:start-server\"",
    "dev:client": "cross-env NODE_ENV=development webpack-dev-server --port 8080 --open --history-api-fallback --no-info --content-base dist/web/ --inline --config webpack.config.client.js",
    "dev:server": "cross-env NODE_ENV=development webpack --hide-modules --config webpack.config.server.js --watch",
    "dev:start-server": "cross-env NODE_ENV=development nodemon ./dist/server/server.js --watch ./dist/server",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.config.server.js",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.config.client.js",
    "build": "npm run build:server && npm run build:client",
    "start": "cross-env NODE_ENV=production node ./dist/server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-client": "^1.2.2",
    "apollo-passport": "0.0.7",
    "apollo-passport-local": "0.0.3",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "bcrypt": "^1.0.2",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.2",
    "foundation-sites": "^6.3.1",
    "graphql": "^0.9.6",
    "graphql-tag": "^2.1.0",
    "jsonwebtoken": "^7.4.1",
    "jwt-decode": "^2.2.0",
    "jwt-simple": "^0.5.1",
    "kcors": "^2.2.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-graphql": "^0.7.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.0.0",
    "koa-mount": "^3.0.0",
    "koa-passport": "^3.0.0",
    "koa-route": "^3.2.0",
    "koa-router": "^7.2.0",
    "koa-session": "^5.0.0",
    "koa-static": "^3.0.0",
    "mongodb": "^2.2.27",
    "mongoose": "^4.10.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "request": "^2.81.0",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.1",
    "vue": "^2.3.3",
    "vue-apollo": "^2.1.0-beta.8",
    "vue-loader": "^12.2.0",
    "vue-resource": "^1.3.3",
    "vue-router": "^2.5.3",
    "vue-template-compiler": "^2.3.3",
    "vuex": "^2.3.1",
    "vuex-router-sync": "^4.1.3",
